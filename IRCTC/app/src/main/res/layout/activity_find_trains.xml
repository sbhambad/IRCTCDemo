<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train_bg"
    tools:context="com.zuneeue.irctcinfo.activities.FindTrains">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/sourceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:textColor="@color/textColorSecondary"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/source"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/sourceTxt"

            android:padding="3dp"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"

            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/source"
            android:src="@drawable/arrow" />


        <TextView
            android:id="@+id/destTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sourceTxt"
            android:layout_marginTop="25dp"
            android:text="Dest"
            android:textColor="@color/textColorSecondary"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/source"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/sourceTxt"

            android:padding="3dp"
            android:textSize="22sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dest"
            android:text="Find"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>


    </RelativeLayout>


</RelativeLayout>
